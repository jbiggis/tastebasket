<script type="text/javascript">
$(document).ready(function(){
  $(".bacon-crisp").hover(function(){
	  $(this).toggleClass("bacon");
	  $(".seeded-crisps").css("border","1px solid #9b0002");
	  }, function(){
	  $(this).toggleClass("bacon");
	  	  $(".seeded-crisps").css("border","1px solid transparent");
  });

    $(".seeded-crisps").hover(function(){
	  $(".bacon-crisp").toggleClass("bacon");
	  $(this).css("border","1px solid #9b0002");
	  }, function(){
	  $(".bacon-crisp").toggleClass("bacon");
	  	  $(this).css("border","1px solid transparent");
  });


$('#read-more').click(function() {
if (location.pathname.replace(/^\//,") == this.pathname.replace(/^\//,")
&& location.hostname == this.hostname) {
var $target = $(this.hash);
$target = $target.length && $target
|| $('[name=' + this.hash.slice(1) +']');
if ($target.length) {
var targetOffset = $target.offset().top;
$('html,body')
.animate({scrollTop: targetOffset}, 1000);
return false;
}
}
});





  });



</script>



<meta property="og:title" content="TasteBasket" />
